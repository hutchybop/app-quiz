<% layout('layouts/boilerplate')%>
<div class="container mt-3 ml-2">
    <div class="row">
        <div class="col-lg-6 mb-2">
            <h1>HutchyBop's Quiz</h1>
            <div class="mt-3">
                <p id="catDiff">Category: <span id="cat" class="addBold"></span></p>
                <p>Difficulty: <span id="diff" class="addBold"></span></p>
            </div>
            <h4>Question: <span id='questNum' class="addBold"></span></h4>
            <h3 id="question" class="addBold"></h3>
            <h3>Answers:</h3>

            <div class="form-check pl-5">
                <div class="form-group row">
                    <input class="form-check-input checkboxes" type="checkbox" id='one'>
                    <label class="form-check-label strikethrough pl-2" for="one">
                        <h4>A: <span id="multiOne" class="addBold"></span></h4>
                    </label>
                </div>
                <div class="form-group row">
                    <input class="form-check-input checkboxes" type="checkbox" id='two'>
                    <label class="form-check-label strikethrough pl-2" for="two">
                        <h4>B: <span id="multiTwo" class="addBold"></span></h4>
                    </label>
                </div>
                <div class="form-group row">
                    <input class="form-check-input checkboxes" type="checkbox" id='three'>
                    <label class="form-check-label strikethrough pl-2" for="three">
                        <h4>C: <span id="multiThree" class="addBold"></span></h4>
                    </label>
                </div>
                <div class="form-group row">
                    <input class="form-check-input checkboxes" type="checkbox" id='four'>
                    <label class="form-check-label strikethrough pl-2" for="four">
                        <h4>D: <span id="multiFour" class="addBold"></span></h4>
                    </label>
                </div>
            </div>

            <h2 id="correctAns"></h2>


            <div class="d-flex">
                <div class="mr-auto">
                    <button id="submitBtn" class="btn btn-success">Submit Answer</button>
                </div>
                <div>
                    <button id="next" class="btn btn-primary">Show Answer</button>
                </div>
            </div>

            <form id="finishForm" action="/finish" method='post'>
                <input type="text" id="userFin" name="userFin">
                <input type="text" id="ansFin" name="ansFin">
                <button type="submit" id="finish">Finish</button>
            </form>
        </div>

        <div class="col-lg-6 mt-3 mb-3" id="submittedDiv">
            <div  class="card" style="width: 18rem;">
                <div class="card-header">
                    <h3>Users Submitted...</h3>
                </div>
                <ul id="submittedUl" class="list-group list-group-flush"></ul>
            </div>
        </div>
    </div>
</div>




