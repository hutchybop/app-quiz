<% layout('layouts/boilerplate')%>
<div class="container mt-3 d-flex justify-content-center">
    <div class="row">
        <div class="col-lg-12">
            <!-- All users are shown -->
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    <h3>Users in Quiz...</h3>
                </div>
                <ul id="userList" class="list-group list-group-flush">
                    <% for(u of userList){ %>
                        <li class="list-group-item"><%= u %></li>
                    <% } %>
                </ul>
            </div>

            <!-- Button hidden to everyone apart from the 'hutchybop' userName -->
            <!-- Will send 'hutchybop' to the start POST route -->
            <!-- Where gameInProgress is changed to true then 'hutchybop' is redirected to the quiz -->
            <form class="mt-4" id='start' action="/start" method='post'>
                <div class="form-row align-items-center">
                    <div class="col-auto my-1">
                        <label class="mr-sm-2 quest" for="amount">Amount of Questions:</label>
                        <select class="custom-select mr-sm-2" id="amount" name="amount">
                            <option value="10" selected>10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                            <option value="50">50</option>
                        </select>
                    </div>

                    <div class="col-auto my-1">
                        <label class="mr-sm-2 quest" for="diff">Difficulty:</label>
                        <select class="custom-select mr-sm-2" id="" name="diff">
                            <option value="easy" selected>Easy</option>
                            <option value="medium">Medium</option>
                            <option value="hard">Hard</option>
                            <option value="easy,medium">Easy & Medium</option>
                            <option value="easy,medium,hard">Easy, Medium & Hard</option>
                            <option value="medium,hard">Medium & Hard</option>
                        </select>
                    </div>


                    <div class="col-auto my-1">
                    <button class="btn btn-success">Start</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
