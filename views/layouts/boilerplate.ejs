    <!-- Setting up socket.io to work everywhere -->
    <script src="/socket.io/socket.io.js"></script>

  </head>

  <body>

    <main class="vh-100">

      <% if(userData && userData.quizMaster == true){ %>
        <!-- Lets the QuizMaster reset the Quiz -->
        <form id='resetQuiz' action="/reset-quiz?_method=DELETE" method='post'>
          <button id="resetQuizBtn" class="btn btn-danger mb-3 mt-4 ml-3">Reset Quiz</button>
        </form>
      <% }else if(userData && userData.quizMaster != true) { %>
        <!-- Lets all other users leave the Quiz -->
        <form id='resetUser' action="/reset-user?_method=PATCH" method='post'>
          <button id="resetUserBtn" class="btn btn-danger mb-3 mt-4 ml-3">Leave Quiz</button>
        </form>
      <% } %>

      <!-- Shows the flash partial -->
      <div class="container d-flex justify-content-center">
        <div class="row">
          <div class="col-lg-12 mt-3">
            <%- include('../partials/flash') %>
          </div>
        </div>
      </div>

      <%- body %>

    </main>

    <!-- BootStrap scripts -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
      crossorigin="anonymous"
    ></script>
    <!-- Bootstrap - validateForms -->
    <script type="text/javascript" src="/javascripts/validateForms.js"></script>
    

    <!-- io.socket script -->
    <script>
      const socket = io();
      
      // ResetQuiz emitted from quiz controller reset-quiz route
      socket.on('resetQuiz', (quizCode) => {

        if(res.locals.userData && res.locals.userData.quizCode !== quizCode){

          let userQuizCode = ''

          // Sends an AJAX request to the server to retrieve the user;s current quizCode.
          fetch('/api/quizcode',{
            method: 'GET',
            credentials: 'include',
            headers: { 'Content-Type': 'application/json' },
          })
          .then(response => response.json())
          .then(data => {

            // If the user's quizCode (data.message) is the same as 
            // The quizCode from the reset io.socket (sent from /reset-quiz)
            // It reloads the window and redirects the user to / where userData is wiped
            // This happens either at / or quizChecks middleware
            userQuizCode = data.message
            if(userQuizCode == quizCode){
              window.location.replace("/?isResetQuiz=true");
            }
          })
          .catch(error => console.error('Error fetching user data:', error));
        }

      })



    </script>


<script>
  
</script>

    <!-- Personal scripts -->
    <script type="text/javascript" src="/javascripts/<%= page %>.js "></script>

  </body>
</html>
